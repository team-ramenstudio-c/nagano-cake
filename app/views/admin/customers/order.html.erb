<div class= 'container mt-5'>
  <div class="row">
 <div class="col-md-10 mx-auto">

  <div class="row justify-content-center mb-5">
    <div class="col-md-4 headline">
    <h4><strong><%= @customer.full_name %></strong>さんの注文履歴</h4>
    </div>
  </div>

<div class="col-md-10 mx-auto">
    <table class ="table table-bordered border-dark table-hover align-middle custom-table">
      <thead>
        <tr align="center">
         <th scope="col" style="width: 40%">購入日時</th>
         <th scope="col" style="width: 20%">注文個数</th>
         <th scope="col" style="width: 40%">注文ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @orders.each do |order|%>
        <tr>
         <td>
         <%=link_to admin_order_path(order.id),class:"admin_link" do%>
         <%= l order.created_at %>
         <% end %>
         </td>
         <td align="center"><%= OrderItem.where(order_id: order.id).pluck(:quantity).sum %></td>
         <!--enum日本語化-->
         <td align="center"><%= order.status_i18n%></td>
       </tr>
       <% end %>
      </tbody>
    </table>
    </div>

   <div class="d-flex justify-content-center mt-4">
    <%= paginate @orders %>
   </div>

　　</div>
  </div>
</div>
