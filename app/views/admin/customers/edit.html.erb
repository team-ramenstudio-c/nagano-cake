<%= render"layouts/error_messages", model: @customer %>
<div class="container mt-5">
  <div class="col-md-10 mx-auto mt-5">
  <div class="row">

 <div class="row justify-content-center mb-3">
  <div class="col-md-4 headline">
   <h4>会員情報編集</h4>
   </div>
 </div>


  <%= form_with model: @customer, url:admin_customer_path, method: :patch do |f| %>

  <div class="col-md-10  mx-auto mb-3">
    <table class="table table-borderless">
      <thead>
        <tr>
          <th></th>
          <th></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
      <tr>
        <td>会員ID</td>
        <td><%= @customer.id %></td>
      </tr>
      <tr>
        <td><%= f.label :氏名,class:"col-form-label" %></td>
        <td><%= f.text_field :last_name, autofocus: true, autocomplete: "last_name",class:"form-control" %></td>
        <td><%= f.text_field :first_name, autocomplete: "first_name",class:"form-control" %></td>
      </tr>
      <tr>
        <td><%= f.label :フリガナ,class:"col-form-label" %></td>
        <td><%= f.text_field :furigana_last_name, autocomplete: "furigana_last_name",class:"form-control" %></td>
        <td><%= f.text_field :furigana_first_name, autocomplete: "furigana_first_name",class:"form-control" %></td>
      </tr>
      <tr>
         <td><%= f.label :郵便番号,class:"col-form-label" %></td>
         <td><%= f.text_field :post_code, pattern:"^[0-9][0-9]*$", autocomplete: "post_code",class:"form-control" %></td>
      </tr>
      <tr>
         <td><%= f.label :住所,class:"col-form-label" %></td>
         <td><%= f.text_field :address,autocomplete: "address",class:"form-control" %></td>
      </tr>
      <tr>
         <td><%= f.label :電話番号,class:"col-form-label" %></td>
         <td><%= f.text_field :telephone_number,pattern:"^[0-9][0-9]*$",autocomplete: "telephone_number",class:"form-control" %></td>
      </tr>
      <tr>
         <td><%= f.label :メールアドレス,class:"col-form-label" %></td>
         <td><%= f.email_field :email, autocomplete: "email",class:"form-control" %></td>
      </tr>
      <tr>
        <td><%= f.label :is_deleted,"会員ステータス",class:"col-form-label" %></td>
         <td>
          <%= f.radio_button :is_deleted, :false,class:"form-check-input" %>
          <%= f.label :is_deleted, "有効",class:"form-check-label" %>
        </td>
        <td>
          <%= f.radio_button :is_deleted, :true,class:"form-check-input" %>
          <%= f.label :is_deleted, "退会",class:"form-check-label" %>
        </td>
      </tr>
    </table>

    <div class=" mt-3 text-center">
     <%= f.submit "変更を保存", class: "btn", style: "background-color: #1A120B; color: #E5E5CB;"%>
    </div>

  <% end %>

</div>

  </div>

  </div>
 </div>
</div>