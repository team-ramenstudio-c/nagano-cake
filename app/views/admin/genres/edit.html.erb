 <%= render"layouts/error_messages", model: @genre %>
<div class= 'container mt-5'>
 <div class="col-md-10 mx-auto">

 <div class="row justify-content-center mb-5">
  <div class="col-md-4 headline">
   <h4>ジャンル編集</h4>
   </div>
 </div>

  <%= form_with model: @genre, url:admin_genre_path, method: :patch do |f| %>
 <div class="row d-flex justify-content-center mt-3">

  <div class="col-md-2 text-center">
   <%= f.label :name, "ジャンル名" %>
  </div>

  <div class="col-md-3">
   <%= f.text_field :name ,placeholder:"ジャンル名", class: "form-control"%>
  </div>

  <div class="col-md-1">
   <%= f.submit "変更を保存", class:"btn", style: "background-color: #1A120B; color: #E5E5CB;" %>
  </div>
  <% end %>