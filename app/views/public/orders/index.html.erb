<div class="container">
  <div class="row justify-content-center order-new-title mt-5">
    <div class="col-md-4 headline">
      <h4>注文履歴一覧</h4>
    </div>
  </div>

  <div class="row justify-content-center mt-4">
     <div class="col-md-10">
      <table class="table table-hover table-inverse table-bordered custom-table", style="border-color: #3C2A21;">
        <thead>
          <tr align=center >
            <th scope="col" style="width:10%;">注文日</th>
            <th scope="col" style="width:30%;">配送先</th>
            <th scope="col" style="width:30%;">注文商品</th>
            <th scope="col" style="width:10%;">支払い金額</th>
            <th scope="col" style="width:10%;">ステータス</th>
            <th scope="col" style="width:20%;">注文詳細</th>
           </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
          <tr id="cart_item">
            <td class="align-middle"><%= order.created_at.strftime('%Y/%m/%d') %></td>
            <td class="align-middle">
              〒<%= order.shipping_post_code %><br>
              <%= order.shipping_address %><br>
              <%= order.shipping_name %>
            </td>
            <td class="align-middle">
              <% order.items.each do |item| %>
               <div class="row">
                 <div class="col">
                  <%= item.name %>
                 </div>
               </div>
              <% end %>
            </td>
            <td class="align-middle text-center"><%= order.billing_amount.to_s(:delimited) %>円</td>
            <td class="align-middle"><%= order.status_i18n %></td>
            <td class="align-middle text-center"><%= link_to '表示する', order_path(order), class: "btn", style: "background-color: #1A120B; color: #E5E5CB;" %></td>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
     </div>
  </div>
   <div class="d-flex justify-content-center mt-4">
    <%= paginate @orders %>
   </div>
  </div>
</div>
